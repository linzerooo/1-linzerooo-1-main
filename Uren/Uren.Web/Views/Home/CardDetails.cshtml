@model Shared.Requests.Shop.GetShop.ShopModel

@{
    ViewData["Title"] = Model.CardName;
}

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-12">
            <div class="product-images">
                @foreach (var image in Model.ImageSrc)
                {
                    <div class="product-thumbnail">
                        <img src="@image" alt="Image of @Model.CardName" class="img-thumbnail" />
                    </div>
                }
            </div>
        </div>
        <img style="width: 50%;" src="@Model.ImageSrc.First()" alt="Image of @Model.CardName" />
        <div class="col-lg-9 col-md-8 col-12">
            <div class="product-details">
                <h2 class="product-title">@Model.CardName</h2>
                <span class="product-price">$@Model.Price</span>
                <p class="product-description">@Model.Description</p>
                <div class="product-actions">
                    <div class="quantity">
                        <button type="button" class="quantity-decrease">-</button>
                        <input type="number" value="1" class="quantity-input" />
                        <button type="button" class="quantity-increase">+</button>
                    </div>
                    <form method="post" action="@Url.Action("AddToCart", "Cart")">
                        <div class="add-to-cart-item">
                            <input type="hidden" name="cardId" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </div>
                    </form>
                </div>
                <div class="product-meta">
                    <p><strong>SKU:</strong> WVN-04</p>
                    <p><strong>Categories:</strong> Audio, Exterior, Oils & Fluids, Turbo System</p>
                    <p><strong>Tags:</strong> Tag-01, Tag-04</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container{
        margin-top: 200px;
    }
    .product-images {
        display: flex;
        flex-direction: column;
    }

    .product-thumbnail {
        margin-bottom: 10px;
    }

    .img-thumbnail {
        width: 100%;
        max-width: 100px;
        height: auto;
        cursor: pointer;
        border: 1px solid #ddd;
        padding: 5px;
        background: #fff;
    }

    .product-details {
        padding: 20px;
    }

    .product-title {
        font-size: 24px;
        font-weight: bold;
    }

    .product-price {
        color: #ffc400;
        font-size: 20px;
        margin-bottom: 10px;
    }

    .product-description {
        margin-bottom: 20px;
    }

    .product-actions {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .quantity {
        display: flex;
        align-items: center;
        margin-right: 10px;
    }

    .quantity-decrease,
    .quantity-increase {
        border: 1px solid #ddd;
        padding: 5px 10px;
        cursor: pointer;
        background: #fff;
    }

    .quantity-input {
        width: 50px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .add-to-cart {
        background: #ffc400;
        color: #fff;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
    }

    .product-meta p {
        margin: 0;
        margin-bottom: 10px;
    }
</style>
