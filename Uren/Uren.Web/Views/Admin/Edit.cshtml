@model Finate.Application.Features.Commands.Shop.UpdateProductCardCommand

@{
    ViewData["Title"] = "Edit Product Card";
}

<h2>Edit Product Card</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="CardName" class="control-label"></label>
        <input asp-for="CardName" class="form-control" />
        <span asp-validation-for="CardName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageSrc" class="control-label"></label>
        <input asp-for="ImageSrc" class="form-control" />
        <span asp-validation-for="ImageSrc" class="text-danger"></span>
    </div>
